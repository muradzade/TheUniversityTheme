{% if Model.ContentItem.Content.News.Image.Paths.size > 0 %}
<aside id="colorlib-hero"  class="js-fullheight" >
  <div class="flexslider js-fullheight ">
    <ul class="slides">
      {% for image in Model.ContentItem.Content.News.Image.Paths %}
      
      <li style="background-image: url({{ image | asset_url }});">
        <div class="overlay-gradient"></div>
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center js-fullheight slider-text">
              <div class="slider-text-inner">
              </div>
            </div>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</aside>
{% endif %}

  <div class="row" style="margin-top:60px">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <h2>{{Model.ContentItem.Content.TitlePart.Title}}</h2>
      <br/>
      <div>
        {{Model.ContentItem.Content.MarkdownBodyPart.Markdown | markdownify | raw }}
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>